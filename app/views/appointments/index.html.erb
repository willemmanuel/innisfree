<h1>Listing appointments</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Resident</th>
      <th>Physician</th>
      <th>Volunteer</th>
      <th>Date</th>
      <th>Time</th>
      <th>For</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.resident.name %></td>
        <td><%= appointment.physician.name %></td>
        <% if appointment.volunteer.nil? %>
          <td>No volunteer assigned</td>
        <% else %>
          <td><%= appointment.volunteer.name %></td>
        <% end %>

        <td><%= appointment.date %></td>
        <td><%= appointment.time %></td>
        <td><%= appointment.for %></td>
        <td><%= appointment.notes %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path %>
