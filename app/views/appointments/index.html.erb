<h1>Coworker Appointments</h1>
<p>
  Download:
  <%= link_to "CSV", appointments_path(format: "csv") %>
</p>
<%= render 'filter' %>
<div class="row">
<div id="textDiv" class = "col-md-8"> </div>
<div id="fullCalendar" class="col-md-8">
</div>
<div class="col-md-4">
  <h2>Upcoming</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Coworker</th>
      <th>Doctor</th>
      <th>Volunteer</th>
      <th>Date</th>
      <th>Time</th>
      <th>Notes</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @upcoming_appointments.each do |appointment| %>
      <tr>
        <td><%= link_to appointment.resident.name, appointment.resident %></td>
        <td><%= link_to appointment.doctor.name, appointment.doctor %>   
          <small><%= link_to '(map)', map_link(appointment.doctor.address) %></small></td>
        <% if appointment.user.nil? %>
          <td>No volunteer assigned</td>
        <% else %>
          <td><%= link_to appointment.user.name, appointment.user %></td>
        <% end %>

        <td><%= appointment.date.strftime("%a %b %e") %></td>
        <td><%= appointment.time.in_time_zone('EST').strftime("%I:%M %p") %></td>
        <td><%= appointment.notes %></td>
        <td><%= link_to 'X', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<center>
<%= will_paginate @upcoming_appointments, renderer: BootstrapPagination::Rails %>
</center>
</div>
</div>

<%= link_to 'New Appointment', new_appointment_path %>
<hr>
