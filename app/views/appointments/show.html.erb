<p id="notice"><%= notice %></p>

<p>
  <strong>Resident:</strong>
  <%= @appointment.resident.name %>
</p>

<p>
  <strong>Physician:</strong>
  <%= @appointment.physician.name %>
</p>

<p>
  <strong>Volunteer:</strong>
  <% if @appointment.volunteer.nil? %>
    No volunteer assigned
  <% else %>
    <%= @appointment.volunteer.name %>
  <% end %>
</p>

<p>
  <strong>Date:</strong>
  <%= @appointment.date %>
</p>

<p>
  <strong>Time:</strong>
  <%= @appointment.time %>
</p>

<p>
  <strong>For:</strong>
  <%= @appointment.for %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @appointment.notes %>
</p>

<%= link_to 'Edit', edit_appointment_path(@appointment) %> |
