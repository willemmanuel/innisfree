<h1>User privileges</h1>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Email</th>
      <th>Approved?</th>
      <th>Admin?</th>
      <th>House?</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>

        <% if user.approved %>
        	<td><%= link_to "Y", approve_user_path(user), method: :put, class: "btn btn-success", style: "width: 40px;" %></td>
        <% else %>
			<td><%= link_to "N", approve_user_path(user), method: :put, class: "btn btn-warning", style: "width: 40px;" %></td>
        <% end %> 

        <% if user.admin %>
        	<td><%= link_to "Y", admin_user_path(user), method: :put, class: "btn btn-success", style: "width: 40px;" %></td>
        <% else %>
			<td><%= link_to "N", admin_user_path(user), method: :put, class: "btn btn-warning", style: "width: 40px;" %></td>
        <% end %>

        <% if user.house.nil? %>
        	<td>No house linked</td>
        <% else %>
			<td><%= link_to user.house.name, user.house %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>