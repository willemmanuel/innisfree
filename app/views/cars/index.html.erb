<div class="row">
<div class="col-md-6">
<h2>Available</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>For</th>
    </tr>
  </thead>

  <tbody>
    <% @checked_in.each do |car| %>
      <tr>
        <td><h5><%= link_to car.name, car %></h5></td>
        <td>
          <%= form_tag(toggle_car_path(car), method: :put) do %>
            <%= text_field_tag(:for) %>
          </td>
          <td>
            <%= submit_tag("Check out", class: "btn btn-success") %>
          </td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="col-md-6">
<h2>Checked Out</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Volunteer</th>
      <th>For</th>
    </tr>
  </thead>

  <tbody>
    <% @checked_out.each do |car| %>
      <tr>
        <td><h5><%= link_to car.name, car %></h5></td>
        <td><%= link_to car.user.name, car.user %></td>
        <td><%= car.for %></td>
        <td><%= link_to 'Check In', toggle_car_path(car), method: :put, class: "btn btn-success" %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>

<%= link_to 'New Car', new_car_path %>