<h1>Doctors</h1>

<%= button_to 'New Doctor', new_doctor_path, method: :get, class: "mobile-size" %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Address</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.doctor_type %></td>
        <td><%= link_to doctor.address, map_link(doctor.address) %></td>
        <td><%= doctor.phone %></td>
        <td><%= link_to 'See Detail', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Delete', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p>
  <%= link_to "Download as CSV", doctors_path(format: "csv") %>
</p>
