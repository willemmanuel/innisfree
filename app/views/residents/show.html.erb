<p id="notice"><%= notice %></p>
<div class="col-md-6">
	<h2> <%= @resident.name %> </h2>
<p>
  <strong>House:</strong>
  <%= link_to @resident.house.name, @resident.house %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @resident.notes %>
</p>

<% if current_user.admin or current_user.house_id == @resident.house_id %>
    <%= link_to 'Edit', edit_resident_path(@resident) %> |
  <!--  <%# <%= link_to 'Delete', @resident, method: :delete, data: { confirm: 'Are you sure?' } %> | -->
<% end %>
<%= link_to 'Back to Houses', houses_path %>
</div>

<div class="col-md-6">
<h2>Appointments</h2>
<% if !@upcoming_appointments.nil? %>
	<%= render 'appointments/upcoming' %>
<% else %>
	<h4>No resident appointments</h4>
<% end %>
</div>
