<%= form_tag("reports/generate", method: "get")  %>
 <p> Houses: </p>
 <div class = "field">
 <%= collection_select nil, :house_id,  @houses.order(name: :asc), :id, :name, {:prompt => 'All' }, {:class => 'chosen-select'}%></div>
 <BR>
 <p> Residents: </p>
 <div class = 'field'>
 <%= collection_select nil, :resident_id, @residents.order(name: :asc), :id, :name, {:prompt => "All"}, {:class => 'chosen-select'}%></div>
 <BR>
 <p> Doctors: </p>
 <div class = "field">
 <%= collection_select nil, :doctor_id, @doctors.order(name: :asc), :id, :name, {:prompt => "All"}, {:class => 'chosen-select'}%></div>
 <BR>
 <p> Appointment type: </p>
 <div class = 'field'>
 <%= collection_select nil, :apt_type, @appointment_types.order(apt_type: :asc), :apt_type, :apt_type, {:prompt => "All"}, {:class => 'chosen-select'}%></div>
 <BR>

 <p>From: &nbsp;<input type="text" id="datepicker" name='date'> &nbsp;&nbsp;&nbsp; To: &nbsp; <input type="text" id="datepicker2" name='date2'></p>
<p>  Format: &nbsp; <input type="radio" name="format" value="CSV" checked>CSV &nbsp;&nbsp;
<input type="radio" name="format" value="PDF">PDF
</p>
<br>
<%= button_to 'Generate Report', action: 'generate'  %>
